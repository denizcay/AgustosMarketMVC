@*@model AgustosMarketMVC.ViewModels.HomeViewModel*@

@model HomeViewModel
@{
    ViewData["Title"] = "Anasayfa";
    int? kid = Model.SeciliKategoriId;
}

<div class="row">
    <div class="col-md-4 col-lg-3">
        <h3 class="mt-3">Kategoriler</h3>
        <div class="list-group">
            <a class="list-group-item list-group-item-action  @(!kid.HasValue ? "active" : "")" asp-controller="Home" asp-action="Index">
                Tüm Ürünler
            </a>
            @foreach (Kategori kt in Model.Kategoriler)
            {
                <a class="list-group-item list-group-item-action @(kid==kt.Id ? "active" : "")" asp-controller="Home" asp-action="Index" asp-route-kid="@kt.Id">
                    @kt.KategoriAd
                </a>
            }
        </div>
    </div>



    <div class="col-md-8 col-lg-9">
        <h3 class="mt-3">Ürünler</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Ürün Adı</th>
                    <th>Birim Fiyat</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Urun u in Model.Urunler)
                {
                    <tr>
                        <td>@u.Id</td>
                        <td>@u.UrunAd</td>
                        <td>₺@u.BirimFiyat.ToString("n2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

