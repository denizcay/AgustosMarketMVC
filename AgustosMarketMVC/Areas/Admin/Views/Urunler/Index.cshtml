@model List<Urun>
@{
    ViewBag.Title = "Index";
}
<h3>Ürünler</h3>
<div class="col-md-8 col-lg-9">
    <h3 class="mt-3">Ürünler</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ürün Adı</th>
                <th>Birim Fiyat</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Urun u in Model)
            {
                <tr>
                    <td>@u.Id</td>
                    <td>@u.UrunAd</td>
                    <td>₺@u.BirimFiyat.ToString("n2")</td>
                    <td><a asp-controller="Urunler" asp-action="Duzenle" asp-route-uid="@u.Id">Düzenle</a>
                    <td><a asp-controller="Urunler" asp-action="Sil" asp-route-uid="@u.Id">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
